{
  "compilerOptions": {
    "target": "es2016",  
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules/*"],
      "ms-autenticacao/*": ["../JaLiLeituraBiblicaAutenticacao/src/*"]
    },
    "baseUrl": ".",
    "outDir": "./dist/",
    "rootDirs": [
      "./src/",
      "../JaLiLeituraBiblicaAutenticacao/src/*"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["__tests__", "node_modules"]
}
